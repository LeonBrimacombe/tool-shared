<%= simple_form_for [@tool, @booking] do |f| %>
  <%= f.input :start_date ,
            as: :string,
            input_html: { data: { controller: "datepicker" } } %>
  <%= f.input :end_date ,
            as: :string,
            input_html: { data: { controller: "datepicker" } } %>
  <%= f.submit class: 'btn-submit mt-3'%>
<% end %>

<%= link_to "Cancel", "#", data: {
  controller: "modals",
  action: "modals#close"
}, class: "cancel-button" %>
