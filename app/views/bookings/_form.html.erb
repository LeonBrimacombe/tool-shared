<%= simple_form_for [@tool, @booking] do |f| %>
  <%= f.input :start_date ,
            as: :string,
            input_html: { data: { controller: "datepicker" } } %>
  <%= f.input :end_date ,
            as: :string,
            input_html: { data: { controller: "datepicker" } } %>
  <div class="d-flex justify-content-between">
    <div class="text-align-right">
      <%= f.submit class: 'btn-submit mt-3'%>
      <%= link_to "Cancel booking", tool_path(@tool), class:"btn-primary-sml" %>
    </div>
  </div>
<% end %>
