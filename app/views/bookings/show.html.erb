 <%= link_to "Back to bookings", bookings_path %>
<div class="container backing">
  <h2>Booking confirmation</h2>
  <div class="card-booking">
    <% if @booking.tool.images.attached? %>
      <%= cl_image_tag @booking.tool.images.first.key %>
    <% end %>
    <div class="card-booking-info">
      <h3><%= @booking.tool.name %></h3>
      <p>listed by <strong><%= @booking.tool.user.username %></strong></p>
      <p>Collection date: <strong><%= @booking.start_date %></strong></p>
      <p>End date: <%= @booking.end_date %> </p>
      <p>Price: <strong>Â£<%= @booking.tool.price %></strong></p>
      <p><i class="fa-solid fa-location-pin location"></i> <%= @booking.tool.address %></p>
      <%= link_to "Edit booking", edit_tool_booking_path(@booking.tool_id, @booking.id), class:"btn-primary-sm" %>
    </div>
  </div>
</div>
