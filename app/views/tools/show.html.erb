 <%= link_to "Back to tools", tools_path %>

<div class="container backing">
  <div class="card-tool">
    <h1><%= @tool.name %></h1>
    <p>Listed by <strong><%= @tool.user.username %></strong></p>
    <img src="<%= @tool.image %>" style="width:500px;" alt="<%= @tool.name %>">
    <div class="card-tool-info">
      <p><strong>Category</strong> <%= @tool.category %></p>
      <p><%= @tool.description %></p>
      <p><%= @tool.price %></p>
      <p><strong>Avialable from</strong> <%= @tool.available_from %></p>
      <p><strong>Available until</strong> <%= @tool.available_until %></p>
      <p><strong>Collection address</strong> <%= @tool.address %></p>
      <%= link_to 'Add Booking', new_tool_booking_path(@tool), class:"btn-primary"%>
    </div>
  </div>
</div>
