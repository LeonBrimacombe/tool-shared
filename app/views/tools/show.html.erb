<h1>Show Page</h1>

<p>This page will come alive when UI design is available</p>


<div>
  <h1><%= @tool.name %></h1>
  <div class="d-flex">
    <% @tool.images.each do |image| %>
      <%= cl_image_tag image.key, height: 300, width: 400 %>
    <% end %>
  </div>
  <p><%= @tool.category %></p>
  <p><%= @tool.description %></p>
  <p><%= @tool.price %></p>
  <p><%= @tool.available_from %></p>
  <p><%= @tool.available_until %></p>
  <p><%= @tool.address %></p>
  <%= link_to 'Add Booking', new_tool_booking_path(@tool) %>
</div>
